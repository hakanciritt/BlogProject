@model Writer
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum Aç</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                    <div class="form-group">
                        <label for="email" class="mb-2">Email</label>
                        <input asp-for="Mail" type="email" class="form-control" id="email" placeholder="Email" required="">
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="password" class="mb-2">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifre" required="">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-2">
                        <input name="rememberMeStatus" type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p>
                        <a asp-controller="Register" asp-action="Index">
                            Bir hesabın yok mu? hemen kaydolun
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>