@model Contact
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section Styles{
    <link href="~/CoreBlogTema/css/contact.css" rel="stylesheet" />

}

<body>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">Bize Ulaşın</h3>
        <div class="contact-map inner-sec">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d100949.24429313939!2d-122.44206553967531!3d37.75102885910819!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80859a6d00690021%3A0x4a501367f076adff!2sSan+Francisco%2C+CA%2C+USA!5e0!3m2!1sen!2sin!4v1472190196783"
                    class="map" style="border:0" allowfullscreen=""></iframe>
        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row">

                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Adres</h6>
                                <p>
                                    Arnavutköy / İstanbul

                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Email</h6>
                                <p>
                                    Email :
                                    <a href="mailto:blog@email.com"> blog@example.com</a>

                                </p>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Telefon</h6>
                                <p>+1 234 567 8901</p>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="contact_grid_right">
                <form asp-controller="Contact" asp-action="Index" method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label for="">İsim</label>
                                <input class="form-control" type="text" placeholder="İsim" required="" asp-for="UserName">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Email</label>
                                <input class="form-control" type="email" placeholder="Mail" required="" asp-for="Mail">
                                <span class="text-danger" asp-validation-for="Mail"></span>
                            </div>
                            <div class="form-group">
                                <label for="">Subject</label>
                                <input class="form-control" type="text" placeholder="Konu" required="" asp-for="Subject">
                                <span class="text-danger" asp-validation-for="Subject"></span>
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label for="textarea">Message</label>
                                <textarea id="textarea" placeholder="Mesajınız" asp-for="Message"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                            </div>
                            <input class="form-control" type="submit" value="Submit">

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
