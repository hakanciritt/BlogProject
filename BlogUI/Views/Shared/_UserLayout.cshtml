<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8">
    <title>@Html.Raw(ViewData["Title"])</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="Description" content="@Html.Raw(ViewData["Description"])">
    <meta name="keywords" content="Blog Bilgi Sosyal Yazılım Programlama">
    <META name="Abstract" content="Sizler için en güncel konularda en güncel yazıları yazıyoruz.">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema/css/single.css" rel="stylesheet">
    <link href="~/CoreBlogTema/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema/css/fontawesome-all.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" asp-controller="Blog" asp-action="Index">
                        <i class="fab fa-linode"></i> Blog
                    </a>
                </div>
                @await Html.PartialAsync("AuthPartial")
                <div class="col-md-4 log-icons text-right">
                    <ul class="social_list1 mt-3">
                        <li>
                            <a href="#" class="facebook1 mx-2">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="twitter2">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="dribble3 mx-2">
                                <i class="fab fa-dribbble"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="pin">
                                <i class="fab fa-pinterest-p"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("NavPartial")
    </header>

    @RenderBody()

    @await Html.PartialAsync("FooterPartial")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/CoreBlogTema/js/move-top.js"></script>
    <script src="~/CoreBlogTema/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>