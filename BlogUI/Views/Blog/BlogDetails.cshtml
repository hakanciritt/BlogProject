@model Blog
@{
    ViewData["Title"] = Model.Title;
    ViewData["Description"] = "Blog - " + Model.Title;
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="banner-bottom">
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">

                <div class="blog-grid-top">
                    <div class="b-grid-top">
                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/CoreBlogTema/images/b1.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="blog-info-middle">
                            <ul>
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @Model.CreateDate.ToShortDateString()
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <h3>
                        <a href="single.html">@Model.Title </a>
                    </h3>
                    <p>
                        @Html.Raw(Model.Content)
                    </p>
                    <a asp-controller="Blog" asp-action="Index" class="btn btn-primary read-m">Blog Listesi</a>
                </div>

                @await Component.InvokeAsync("CommentListByBlog", new { blogId = Model.BlogId })

                @await Component.InvokeAsync("AddComment", new { blogId = Model.BlogId })

            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">

                    <h4>Mail Bültenine Abone Olun</h4>

                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                    @await Component.InvokeAsync("CategoryList")

                    @await Component.InvokeAsync("AuthorsOtherBlogs")

                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>
