@model List<Dtos.Blog.BlogDto>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 5 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Görsel </th>
                                <th> Başlık </th>
                                <th> Oluşturulma Tarihi </th>
                                <th> Blog Detay </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model.OrderByDescending(x=>x.BlogId).Take(5))
                            {
                                <tr>
                                    <td>
                                        <img width="36" src="~/images/@blog.Image" class="mr-2" alt="@blog.Title">
                                    </td>
                                    <td> @blog.Title </td>
                                    <td> @blog.CreateDate.ToString("dd-MMM-yyyy") </td>
                                    <td> <a target="_blank" class="btn btn-primary" asp-controller="Blog" asp-action="BlogDetails" asp-route-blogSlug="@blog.Slug" >Detay</a> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
