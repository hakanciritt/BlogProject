@model List<Dtos.Message.MessageDto>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}
<h1>Mesajlar</h1>

<table class="table table-bordered">

    <thead>
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.MessageId</td>
                <td>@message.Subject</td>
                <td>@message.Sender</td>
                <td>@message.Date.ToString("dd-MMM-yyyy")</td>
                <td>
                    <a class="btn btn-warning">Mesajı Aç</a>
                </td>
            </tr>
        }
    </tbody>
</table>