@model UpdatePasswordViewModel
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}

<h1>Ayarlar</h1>
<div class="col-12 d-flex">
    <form class="col-9" asp-area="Writer" asp-controller="Settings" asp-action="UpdatePassword" method="post" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="Password" class="col-form-label">Şifre</label>
            <div>
                <input asp-for="Password" type="text" class="form-control" placeholder="Şifre">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-form-label">Şifre Tekrar</label>
            <div>
                <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Şifre Tekrar">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary my-2">Güncelle</button>
        </div>
    </form>
    <div class="col-3 my-5">
        <button type="submit" class="btn btn-danger">Hesabımı Sil</button>
    </div>
</div>


