@model Category
@{
    ViewData["Title"] = "Kategori Ekle";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">
                <form method="post" asp-controller="Category" asp-action="AddCategory" asp-antiforgery="true">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input required="" asp-for="Name" placeholder="Kategori Adı" type="text" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-10">
                            <textarea required="" asp-for="Description" rows="5" cols="10" type="text" placeholder="Açıklama" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input asp-for="Status" type="checkbox" class="i-checks" style="position: absolute; opacity: 0;">
                            <label class="ml-2">Kategori Durumu</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-white" type="submit">Vazgeç</a>
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
