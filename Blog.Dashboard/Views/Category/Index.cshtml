@model CategoryListViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="" aria-expanded="true">Kategori Ekle</a>
                    </h5>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                        Kategori Ekle
                    </div>
                </div>
            </div>
            <div class="ibox-title">
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-5 m-b-xs">
                        <select class="form-control-sm form-control input-s-sm inline">
                            <option value="0">Option 1</option>
                            <option value="1">Option 2</option>
                            <option value="2">Option 3</option>
                            <option value="3">Option 4</option>
                        </select>
                    </div>
                    <div class="col-sm-4 m-b-xs">

                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input placeholder="Arama" type="text" class="form-control form-control-sm">
                            <span class="input-group-append">
                                <button type="button" class="btn btn-sm btn-primary">
                                    Ara
                                </button>
                            </span>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>Id</th>
                                <th>Başlık </th>
                                <th>İçerik </th>
                                <th>Durum</th>
                                <th>Date</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {

                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><input type="checkbox" @(category.Status ? "checked" : string.Empty) class="i-checks"></td>
                    <td>Jul 14, 2013</td>
                    <td><a data-toggle="modal" class="btn btn-primary" href="#modal-form">Güncelle</a></td>
                </tr>
}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<div id="modal-form" class="modal fade show" style="display: none; padding-right: 16px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <form class="col-lg">
                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <input placeholder="Kategori adı" type="text" placeholder="Kategori adı" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" cols="4" rows="5" placeholder="Açıklama"></textarea>
                        </div>
                        <div class="form-group">
                            <label>
                                <div class="icheckbox_square-green" style="position: relative;">

                                    <input type="checkbox" class="i-checks" style="position: absolute; opacity: 0;">
                                </div> Kategori Durumu
                            </label>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit">
                                Güncelle
                            </button>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>